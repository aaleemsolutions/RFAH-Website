@model IEnumerable<RFahWebsite.Models.MasterModel>


<div class="catlist">
    <div class="container">
        <div class="title-group1">
            <h2>Top Categories</h2>
        </div>
        <div class="row">

           @foreach (var item in Model.GroupBy(x => x.Sales.PrdId).Select(u => u.First()))
           {

                <div class="col-md-3 col-sm-6">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="image-cat">
                                <a href="#/"> <img src="~/Content/WebsiteAsset/images/products/img-05.jpg"></a>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="name-cat"><h3>@item.Category.Name</h3></div>
                            <a class="view-more" href="@item.Category.Id">view more</a>
                        </div>
                    </div>
                    <div class="list-cat">
                        <ul>
                                @foreach (var sub1 in item.CategoryList.GroupBy(X=>X.ParentId==item.Category.Id).Select(u => u.First()))
                                {
                                    <li><a href="@sub1.Id">@sub1.Name </a></li>
                                }
                            @*<li><a href="#">Headphone, Headset</a></li>
                            <li><a href="#">Home Audio</a></li>
                            <li><a href="#">Mp3 Player Accessories</a></li>*@

                        </ul>
                    </div>
                </div>
           }




        </div>
    </div>
</div><!-- /.catlist -->
